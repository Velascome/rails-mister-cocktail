<h1>Cocktail details</h1>

<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> | <%= dose.description %> |
    <%= link_to "delete", dose_path(dose), method: :delete %> |
    <%= link_to "edit", edit_dose_path(dose) %></li>
  <% end %>
</ul>

<%= link_to "return", cocktails_path, class: "btn btn-primary" %>
<%= link_to "add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>



